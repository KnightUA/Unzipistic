<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="file"
            type="com.knightua.unzipistic.ui.adapters.files.FileItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_dp_8">

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="@dimen/width_dp_64"
            android:layout_height="@dimen/height_dp_64"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="@dimen/width_dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_dp_8"
            android:layout_marginEnd="@dimen/margin_dp_8"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textViewType"
            app:layout_constraintRight_toLeftOf="@+id/textViewSize"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{file.name}"
            tools:text="File Name" />

        <TextView
            android:id="@+id/textViewSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_dp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/buttonUnzip"
            app:layout_constraintTop_toTopOf="parent"
            app:showFileSize="@{file.size}"
            tools:text="12 Mb" />

        <Button
            android:id="@+id/buttonUnzip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_extract_files"
            android:visibility="@{file.archive ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>